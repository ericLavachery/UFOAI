		size		"610 40"
		font		"f_small"
		contentalign	ALIGN_UL
	}

	//
	// store panel
	//
	panel store_panel {
		{
			pos		"20 165"
			size	"660 255"
		}
		rows lines {
			pos			"25 50"
			size		"590 128"
			color1		"0 0.08 0 1"
			color2		"0 0.16 0 1"
			lineheight	16
		}

		string ur_yards_title
		{
