// ==================
// WON MENU
// ==================

window won {
	{
		preventtypingescape	true
	}

	// ==================
	// background
	// ==================

	image background {
		src	"background/won_bg"
	}

	// ==================
	// text
	// ==================

	text results {
		pos			"500 150"
		size		"480 460"
		lineheight	20
		tabwidth	350
		rows		"23"
		dataid		TEXT_LIST2
	}

	// ==================
	// buttons
	// ==================

	button bt_continue {
		string		"_Continue"
		background		"ui/button_blue"
		invis		true
		pos			"865 700"
		size		"128 53"
		color		"1 1 1 0.8"
		selectcolor "1 1 1 1"
		font		"f_big"
		onClick		{
			cmd "ui_pop;"
		}
	}

	func onWindowOpened {
		if ( *cvar:sv_maxclients == 1 ) {
			*node:root.bt_continue@invis = false
		} else {
			*node:root.bt_continue@invis = true
		}
	}

	func onWindowClosed {
		if ( *cvar:sv_maxclients == 1 ) {
			cmd "cp_results 1;"
		}
	}
}

// ==================
// LOST MENU
// ==================

window lost {
	{
		preventtypingescape	true
	}

	// ==================
	// background
	// ==================

	image background {
		src	"background/lost_bg"
	}

	data tryagain {
		integer		0
	}

	// ==================
	// text
	// ==================

	text results {
		pos			"500 150"
		size		"480 460"
		lineheight	20
		tabwidth	350
		rows		"23"
		dataid		TEXT_LIST2
	}

	// ==================
	// buttons
	// ==================

	button bt_tryagain {
		string		"_Try again"
		tooltip		"_Retry this mission"
		invis		true
		background	"ui/button_blue"
		pos			"480 700"
		size		"128 53"
		color		"1 1 1 0.8"
		selectcolor "1 1 1 1"
		font		"f_big"
		onClick		{
			*node:root.tryagain@integer = 1
			cmd "ui_pop;"
		}
	}

	button bt_continue {
		string		"_Continue"
		invis		true
		background	"ui/button_blue"
		pos			"865 700"
		size		"128 53"
		color		"1 1 1 0.8"
		selectcolor "1 1 1 1"
		font		"f_big"
		onClick		{
			cmd "ui_pop;"
		}
	}

	confunc enable_retry {
		*node:root.bt_tryagain@invis = false
	}

	func onWindowOpened
	{
		*node:root.tryagain@integer = 0
		*node:root.bt_tryagain@invis = true
		if ( *cvar:sv_maxclients == 1 ) {
			*node:root.bt_continue@invis = false
		} else {
			*node:root.bt_continue@invis = true
		}
	}

	func onWindowClosed
	{
		call *node:root.executeClose
	}

	func executeClose
	{
		if ( *cvar:sv_maxclients == 1 ) {
			cmd "cp_results 0 <node:root.tryagain@integer>;"
		}
	}
}

// ==================
// DRAW MENU
// ==================

window draw extends lost
{
	{
		preventtypingescape	true
	}

	// ==================
	// background
	// ==================

	image background
	{
		src	"background/lost_bg"
	}

	func executeClose
	{
		if ( *cvar:sv_maxclients == 1 ) {
			// a draw counts as lost
			cmd "cp_results 0;"
		}
	}
}

// ==================================
// POPUP FOR UFO RECOVERY (Base/sell)
// ==================================
window uforecovery
{
	{
